{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/base.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}

{% endblock %}

{% block content %}
    <section id="home-page">
        <section id="intro">
            <div class="container">
                <h2>Reccomended books for your categories</h2>
                <p>Have a look at the trending fiction and non fiction books</p>
            </div>
        </section>
        <section id="books">
            <div class="container">
                <h3>Based on your liked books</h3>
                <div class="book-list">
                    <div class="book">
                        <img src="{{ asset('images/book1.png') }}" alt="Cover 1" >
                        <h4>The Silent Patient</h4>
                        <h4>Alex Michaelidis</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                    <div class="book">
                        <img src="{{ asset('images/book2.png') }}" alt="Cover 2" >
                        <h4>The Testaments</h4>
                        <h4>Margaret Atwood</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                    <div class="book">
                        <img src="{{ asset('images/book3.jpg') }}" alt="Cover 3" >
                        <h4>The Dutch House</h4>
                        <h4>Ann Patchett</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                     <div class="book">
                        <img src="{{ asset('images/book7.jpg') }}" alt="Cover 7" >
                        <h4>The Kite Runner</h4>
                        <h4>Khaled Hosseini</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                    <div class="book">
                        <img src="{{ asset('images/book8.jpg') }}" alt="Cover 8" >
                        <h4>The old man and the sea</h4>
                        <h4>Ernest hemmingway</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                </div>
                <h3>Based on your liked authors</h3>
                <div class="book-list">
                    <div class="book">
                        <img src="{{ asset('images/book4.jpg') }}" alt="Cover 4" >
                        <h4>Caste: The Origins of Our Discontents</h4>
                        <h4>Isabel Wilkerson</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                    <div class="book">
                        <img src="{{ asset('images/book5.jpg') }}" alt="Cover 5">
                        <h4>The Body Keeps the Score: Brain, Mind, and Body in the Healing of Trauma</h4>
                        <h4>Bessel van der Kolk</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                    <div class="book">
                        <img src="{{ asset('images/book6.jpg') }}" alt="Cover 1" >
                        <h4>Empire of Pain: The Secret History of the Sackler Dynasty</h4>
                        <h4>Patrick eRadden Keefe</h4>
                        <a href="{{path("home")}}" class="btn">Buy Now</a>
                    </div>
                </div>
                {% for genre in genres %}
                    <h3>Books in the category {{ genre.getGenre() }}</h3>
                    <div class="book-list">
                        {% set count = 0 %}
                        {% for book in books %}
                            {% if book.getGenre() == genre %}
                                {% if count < 20 %}
                                    <div class="book">
                                        <img src="{{ book.imageUrl }}" alt="Cover 4" >
                                        <h4>{{ book.title() }}</h4>
                                        <h4>{{ book.author().getAuthorName() }}</h4>
                                        <a href="{{ path("home") }}" class="btn">Buy Now</a>
                                    </div>
                                    {% set count = count + 1 %}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </section>
    </section>

{% endblock %}

