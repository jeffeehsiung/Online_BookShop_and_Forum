{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}

{% endblock %}

{% block content%}
    <section id="book-page">
        <img src="{{ asset('images/charlie_chocolate.jpg') }}" alt="Book Cover" width="300"> {# TODO: don't hardcode width #}
        <section id="book-information">
            <h1>{{ bookTitle }}</h1>
            <h2>Author Name, Year</h2>
            <div id="like-system">
                <div class="progress-container">
                    <div class="progress-bar" id="progress-bar"></div>
                </div>
                <button class="ratingButton like" onclick="addLike()">
                    <img class="btn-img" src="{{ asset('images/thumbs-up.png') }}" alt="Image Button">
                </button>
                <button class="ratingButton dislike" onclick="addDislike()">
                    <img class="btn-img" src="{{ asset('images/thumbs-down.png') }}" alt="Image Button">
                </button>
            </div>
            <br>
            <div id="book-options">
                <button type="button" class="button">Follow +</button>
                <button type="button" class="button">Reserve</button>
            </div>
            <section class="about">
                <div id="about-book">
                    <h2>About {{ bookTitle }}</h2>
                    <p>bla bla bla...</p>
                </div>
                <div id="about-author">
                    <h2>About the authour</h2>
                    <p>bla bla bla...</p>
                </div>
            </section>
        </section>
    </section>
{% endblock %}