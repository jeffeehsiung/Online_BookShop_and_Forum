<!DOCTYPE html>
<html lang="en">
<head>
    <title>{%block title%}Book Binder{% endblock %}</title>
    <meta charset="UTF-8">
    <meta property="og:title" content="bookbinder" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="twitter:card" content="summary_large_image">

    <link
          rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&amp;display=swap"
          data-tag="font"
    >
    <link
          rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap"
          data-tag="font"
    >
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css"/>
    {% if stylesheets is defined %}
      {% for stylesheet in stylesheets %}
        <link href="{{ asset('css/' ~ stylesheet) }}" rel="stylesheet" type="text/css"/>
      {% endfor %}
    {% endif %}

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}

  {% endblock %}
  {% if javascripts is defined %}
    {% for script in javascripts %}
      <script src="{{ asset('js/' ~ script) }}" defer></script>
    {% endfor %}
  {% endif %}
</head>

<body {% block bodyAttributes %}{% endblock %}>
<div>
{% for notice in app.flashes('succes') %}
  {{ notice }}
{% endfor %}
</div>
<div>
    <link href="{{ asset('css/base.css') }}" rel="stylesheet" type="text/css"/>
  <div class="home_container">
  <header>
  <nav class="navbar_navbar navbar_root_class_name" id="navbar">
    <a href="{{ path('home') }}">
      <div id="logo" >
        <img id = "logo_png" src="https://www.linkpicture.com/q/Bookable-removebg-preview-2.png" alt="BOOKABLE">
      </div>
    </a>

    <nav class="navbar_nav_content">
      <ul class="navbar_nav_links">

        <li><a class="nav_link" href="{{ path('about') }}">About us </a></li>
        {% if is_granted('ROLE_USER')==0 %}
          <li><a class="nav_link" href="{{ path('welcome') }}">Login </a></li>
        {% endif %}
        {% if is_granted('ROLE_USER') %}
          <li><a class="nav_link" href="{{ path('browsing') }}">Browse a book</a></li>
          <li><a class="nav_link" href="{{ path('settings') }}" >Settings</a></li>
          <li><a class="nav_link" href="{{ path('profile') }}">Profile</a></li>
          <li><a class="nav_link" href="{{ path('app_logout') }}">Log out</a></li>
        {% endif %}


      </ul>
    <nav id="mobile_menu" class="navbar_mobile_menu">
      <div class="navbar_branding">
        <div id="close_mobile_menu" class="navbar_container">
          <svg viewBox="0 0 1024 1024" class="navbar_icon">
            <path
              d="M225.835 286.165l225.835 225.835-225.835 225.835c-16.683 16.683-16.683 43.691 0 60.331s43.691 16.683 60.331 0l225.835-225.835 225.835 225.835c16.683 16.683 43.691 16.683 60.331 0s16.683-43.691 0-60.331l-225.835-225.835 225.835-225.835c16.683-16.683 16.683-43.691 0-60.331s-43.691-16.683-60.331 0l-225.835 225.835-225.835-225.835c-16.683-16.683-43.691-16.683-60.331 0s-16.683 43.691 0 60.331z"
            ></path>
          </svg>
        </div>
      </div>
      <ul class="navbar_nav_links1">
        <li><a class="nav_link">About us</a></li>
        {% if is_granted('ROLE_USER') %}
          <li><a class="nav_link" href="{{ path('browsing') }}">Browse a book</a></li>
          <li><a class="nav_link">Community</a></li>
          <li><a class="nav_link" href="{{ path('settings') }}">Settings</a></li>
          <li><a class="nav_link" href="{{ path('app_logout') }}">Log out</a></li>
        {% endif %}
      </ul>
    </nav>
  </nav>
  </nav>
  </header>

  <main>
      {% block content %}{% endblock %}
  </main>


  <footer class="home_footer">
    <div class="home_footer_content">
      <div class="home_footer_main">
        <div class="home_footer_links">
          <div class="home_categories">
            <div class="home_category">
            <div class="home_category1">
              <div class="home_footer_header">
                <span class="footer_header">Company</span>
              </div>
              <div class="home_links_narrow">
                <a href="{{ 'about' }}"> <span class="footer_link" >About</span></a>
                <span class="footer_link">Team</span>
                <span class="footer_link">News</span>
              </div>
            </div>
            </div>
          </div>
        </div>
        <section class="home_copyright">
          <span class="home_footer_copyright">
            © 2023 a22web12.
          </span>
        </section>
      </div>
      <div class="home_mobile_copyright">
        <span class="home_footer_copyright">
          © 2022 a22web12.
        </span>
      </div>
    </div>

  </footer>
  </div>
</div>
</body>
</html>
